<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/bgPutih">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="180dp">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:background="@color/transparent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgTulis"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_collections"
                        android:layout_height="match_parent" >
                    </ImageView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:paddingHorizontal="15dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginVertical="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:text="Judul"
                            android:textSize="14sp"/>

                        <EditText
                            android:id="@+id/inputJudul"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:hint="Masukan Judul"
                            android:maxLines="200"
                            android:inputType="textCapSentences|textMultiLine"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginVertical="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:text="Kategori"
                            android:textSize="14sp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="1dp"
                            android:background="@color/white"
                            android:layout_margin="10dp"
                            android:layout_height="50dp">

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                    android:id="@+id/spinnerku"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:textColorHint="#05ab9a"
                                    android:hint="Pilih Kategori" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginVertical="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:text="Diskripsi"
                            android:textSize="14sp"/>

                        <EditText
                            android:id="@+id/inputDiskripsi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="14sp"

                            android:hint="Masukan Diskripsi"
                            android:maxLines="200"
                            android:inputType="textCapSentences|textMultiLine"
                            />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <Button
                            android:id="@+id/btnTulis"
                            android:layout_width="150dp"
                            android:layout_centerHorizontal="true"
                            android:text="Tulis"
                            android:textColor="@color/bgPutih"
                            android:textSize="18sp"
                            android:background="@color/colorAccent"
                            android:layout_centerVertical="true"
                            android:layout_height="50dp" />
                    </RelativeLayout>




                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</FrameLayout>